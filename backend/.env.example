# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/inventory_management

# JWT Secret (generate a secure random string)
SECRET_KEY=your-secret-key-change-this-to-a-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=True
APP_NAME=Inventory Management System
API_PREFIX=/api

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Inventory Management System

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880

# Alert Settings
ALERT_CHECK_INTERVAL_MINUTES=60
ALERT_EMAIL_RECIPIENTS=admin@example.com
