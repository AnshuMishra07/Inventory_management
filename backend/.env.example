# Database Configuration
# Format: mysql+pymysql://user:password@host:port/dbname
DATABASE_URL=mysql+pymysql://inventory_user:your_secure_password_here@localhost:3306/inventory_management

# JWT Secret (IMPORTANT: Generate a secure random string)
# You can generate one with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=generate_a_secure_random_string_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=False
APP_NAME=Inventory Management System
API_PREFIX=/api

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Inventory Management System

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880

# Alert Settings
ALERT_CHECK_INTERVAL_MINUTES=60
ALERT_EMAIL_RECIPIENTS=admin@example.com
